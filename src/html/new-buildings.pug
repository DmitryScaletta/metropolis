extends layout/main.pug

block vars
  - var { pageTitle, headerTitle, headerImage } = pages.newBuildings;

block content

  +section-features(features.newBuildings)

  +section-guarantees(guarantees.newBuildings)

  +section-cards(cards.filter(card => card.type === 'new-building'), 'houses', 'Более 200 новостроек в Краснодаре')

  +section-form(forms.newBuilding)

  include includes/section-in-numbers.pug

  +section-cards(reviews.filter(item => item.type === 'new-building'))

  include includes/section-partners.pug
