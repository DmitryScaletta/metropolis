footer#contacts.footer
  .footer__top
    iframe.footer__map.js-footer-map(
      style='border:0;',
      src='//www.google.com/maps?q=Краснодар,+Красных+Партизан+218&output=embed'
    )
    .footer__inner
      .footer__contacts.footer-contacts
        .footer-contacts__title Контакты
        .footer-contacts__address= contacts.address
        a(href=`tel:${contacts.phone.number}`).footer-contacts__phone= contacts.phone.text
        .footer-contacts__button-wrapper
          button.button.js-popup-form-open Заказать звонок
      .footer__logo
  .footer__bottom
    .footer__inner
      .footer__bottom-content
        .footer__copy-text © "Метрополис", 2017 г
        a(href='//art6.ru').footer__copy-logo

a.floating-button.js-popup-form-open

.popup.js-popup-form
  +circle-form(true)

.popup.js-popup-privacy
  .popup__content
    +privacy-policy('Метрополис', 'metropolis', '04.07.2017г')
  .popup__close.js-popup-close

script(src='js/app.js')
